delay = 250ms
bottom-bar = 50px

@font-face {
	font-family: 'OpenSansLight';
	src: url('/OpenSans-Light-webfont.woff') format('woff');
	font-weight: normal;
	font-style: normal;
}

html, body
	height 100%
	padding 0
	margin 0
	background url(/images/grain.png) #222
	font-family 'OpenSansLight'

.screens
	list-style none
	font-size 0px
	margin auto
	padding 50px 70px
	li.template
		display none
	li
		display inline-block
		height 90px
		width 120px
		margin 10px
		.container
			cursor pointer
			background url(/images/grain.png) fixed #eee
			box-shadow 0px 0px 4px -1px #ddd, 0px 8px 10px -10px #fff
			width 120px - 2 * 4px
			height 90px - 2 * 3px
			position relative
			top 0px
			left 0px
			text-align center
			border-radius 3px
			z-index 1
			padding 3px 4px
			transition all delay
			.img
				transition all delay
			&:hover
				width 240px
				height 180px
				top -45px
				left -60px
				z-index 500
			&.fullscreen
				box-shadow none
				border-radius 0px
				z-index 500
				margin 0 -10000px -10000px 0 /* wtf?!? */
				background url(/images/grain.png) fixed #000
				padding 0px
				.img
					height calc(100% \- bottom-bar)

.container .img
	background-size contain
	background-position 50% 50%
	background-repeat no-repeat
	width 100%
	height 100%

#throbber
	display none
	z-index 502
	position fixed
	width 200px
	height 200px
	top calc(50% \- 100px)
	left calc(50% \- 100px)

#overlay
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 501
	background url(/images/grain.png) fixed #000
	top 100%
	opacity 0
	transition opacity delay ease 0s, top 0s delay
	.container
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		transition all delay
		&.next
			left 100%
		&.prev
			left -100%
	.img
		height calc(100% \- bottom-bar);
	.bottom-bar
		height bottom-bar
		background url(/images/grain.png) #444
		box-shadow 0px 10px 7px -10px black inset
		color #fff
		text-shadow 0px 1px 0px #000
		overflow hidden
		.inner
			overflow hidden
			width 800px
			box-shadow 0px 0px 7px -3px black
			margin -10px auto
			padding 15px 5px
			height calc(bottom-bar \- 2*5px)
			position relative
		.original, .close
			text-decoration none
			color inherit
			font-size 16px
			cursor pointer
			background url(/images/grain.png) #666
			box-shadow 0px 10px 7px -10px black inset, 0px 0px 3px 0px black
			display block
			height 20px
			width 16px
			line-height 20px
			text-align center
			position absolute
			top 10px
			padding 2px
		.original
			right 0px
			border-bottom-left-radius 3px
		.close
			left 0px
			border-bottom-right-radius 3px
		h2
			margin -5px 10px
			text-align center
		.date
			position absolute
			bottom 12px
			left 5px
	&.show
		top 0
		opacity 1
		transition opacity delay ease 0s

